Given a sorted array Arr of size N and a number X, you need to find the number of occurrences of X in Arr.


=============================================================================================================


class Solution {
    int count(int[] arr, int n, int x) {
        // code here
         int mid=0,low=0,high=n-1,ans=-1;
        
        while(low<=high){
            
            mid=(low+high)/2;
            if(arr[mid]==x){
                
                if(mid<high){
                    if(arr[mid+1]>x){
                        ans=mid;
                        break;
                    }
                    else{
                        low=mid+1;
                    }
                }
                else{
                    ans=mid;
                    break;
                }
            }
            else if(arr[mid]>x){
                high=mid-1;
            }
            else{
                low=mid+1;
            }
        }
        
      mid=0;
      low=0;
      high=n-1;
      int ans1=-1;
      
        while(low<=high){
            
            mid=(low+high)/2;
            if(arr[mid]==x){
                
                if(mid>0){
                    if(arr[mid-1]<x){
                        ans1=mid;
                        break;
                    }
                    else{
                        high=mid-1;
                    }
                }
                else{
                    ans1=mid;
                    break;
                }
            }
            else if(arr[mid]>x){
                high=mid-1;
            }
            else{
                low=mid+1;
            }
        }
        
        
        if(ans==-1) return(0);
        else{
            return((ans-ans1)+1);
        }
        
    }
}
